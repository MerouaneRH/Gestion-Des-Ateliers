<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        {# Logo et lien Accueil #}
        <a class="navbar-brand" href="{{ path('app_atelier_index') }}">
            <i class="bi-house"></i> Accueil
        </a>

        {# Bouton pour les écrans mobiles #}
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        {# Contenu de la navbar #}
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">

                {# Bouton "Nouveau" pour créer un atelier (accessible uniquement aux instructeurs) #}
                {% if app.user and 'ROLE_INSTRUCTEUR' in app.user.roles %}
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light me-2" href="{{ path('app_atelier_new') }}">
                            <i class="bi-plus-circle"></i> Nouveau
                        </a>
                    </li>
                {% endif %}

                {# Bouton "Mes inscriptions" pour les utilisateurs connectés #}
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link btn btn-outline-light me-2" href="{{ path('mes_inscriptions') }}">
                            <i class="bi bi-journal-check"></i> Mes inscriptions
                        </a>
                    </li>
                {% endif %}

                {# Section Administration (visible uniquement pour les administrateurs) #}
                {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle btn btn-warning me-2" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-gear"></i> Administration
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                            <li>
                                <a class="dropdown-item" href="{{ path('admin_instructeurs') }}">
                                    <i class="bi bi-person-badge"></i> Gérer les instructeurs
                                </a>
                            </li>
                        </ul>
                    </li>
                {% endif %}

                {# Section utilisateur connecté #}
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi-person-circle"></i> {{ app.user.nom }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi-box-arrow-right"></i> Se déconnecter
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}
                    {# Bouton "Se connecter" si l'utilisateur n'est pas connecté #}
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('app_login') }}">
                            <i class="bi-box-arrow-in-right"></i> Se connecter
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
