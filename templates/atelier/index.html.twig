{% extends 'base.html.twig' %}

{% block title %}Atelier index{% endblock %}

{% block body %}
    {{ include('atelier/_navbar.html.twig') }}

    <div class="container mt-5 ">
        <h1 class="mb-4">Atelier Index</h1>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <td>Nom d'Instructeur</td>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for atelier in ateliers %}
                    <tr>
                        <td>{{ atelier.id }}</td>
                        <td>{{ atelier.nom }}</td>
                        <td>{{ atelier.instructeur.nom }}</td>
                        <td>{{ atelier.description }}</td>
                        <td>
                            <a href="{{ path('app_atelier_show', {'id': atelier.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucun objet trouv√©</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
{% endblock %}