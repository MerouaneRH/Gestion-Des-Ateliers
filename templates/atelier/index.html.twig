{% extends 'base.html.twig' %}

{% block title %}Atelier Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre de la page avec icône -->
        <h1 class="mb-4 text-center text-primary fw-bold">
            <i class="bi bi-list-task me-2"></i> Liste des Ateliers
        </h1>

        <!-- Tableau -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="table-dark text-center">
                <tr>
                    <th><i class="bi bi-hash me-1"></i>ID</th>
                    <th><i class="bi bi-card-heading me-1"></i>Nom</th>
                    <th><i class="bi bi-person me-1"></i>Instructeur</th>
                    <th><i class="bi bi-card-text me-1"></i>Description</th>
                    <th><i class="bi bi-gear me-1"></i>Actions</th>
                    {% if app.user and 'ROLE_APPRENTI' in app.user.roles %}
                        <th><i class="bi bi-check-square me-1"></i>Inscription</th>
                    {% endif %}
                </tr>
                </thead>
                <tbody>
                {% for atelier in ateliers %}
                    <tr class="align-middle text-center">
                        <td class="fw-bold text-secondary">{{ atelier.id }}</td>
                        <td class="fw-bold text-dark">{{ atelier.nom }}</td>
                        <td class="text-success">{{ atelier.instructeur.nom }}</td>
                        <td class="text-muted text-start" style="max-width: 300px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">
                            {{ atelier.description }}
                        </td>
                        <td>
                            <div class="d-flex justify-content-center gap-2">
                                <!-- Bouton Voir -->
                                <a href="{{ path('app_atelier_show', {'id': atelier.id}) }}" class="btn btn-info btn-sm">
                                    <i class="bi bi-eye me-1"></i> Voir
                                </a>
                                <!-- Bouton Modifier (seulement pour l'instructeur de l'atelier) -->
                                {% if app.user and 'ROLE_INSTRUCTEUR' in app.user.roles and app.user == atelier.instructeur %}
                                    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="bi bi-pencil-square me-1"></i> Modifier
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                        {% if app.user and 'ROLE_APPRENTI' in app.user.roles %}
                            <td>
                                {% if app.user in atelier.inscrits %}
                                    <!-- Bouton Se désinscrire -->
                                    <form action="{{ path('app_atelier_desinscription', {'id': atelier.id}) }}" method="post">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-x-circle me-1"></i> Se désinscrire
                                        </button>
                                    </form>
                                {% else %}
                                    <!-- Bouton S'inscrire -->
                                    <form action="{{ path('app_atelier_inscription', {'id': atelier.id}) }}" method="post">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-circle me-1"></i> S'inscrire
                                        </button>
                                    </form>
                                {% endif %}
                            </td>
                        {% endif %}
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="{% if app.user and 'ROLE_APPRENTI' in app.user.roles %}6{% else %}5{% endif %}"
                            class="text-center text-muted p-4">
                            <i class="bi bi-exclamation-triangle me-2 text-warning"></i>
                            Aucun atelier trouvé
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
