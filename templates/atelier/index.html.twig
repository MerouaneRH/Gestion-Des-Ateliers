{% extends 'base.html.twig' %}

{% block title %}Atelier index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <!-- Titre de la page avec icône -->
        <h1 class="mb-4 text-center">
            <i class="bi bi-list-task me-2"></i>Liste des Ateliers
        </h1>

        <!-- Tableau -->
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <thead class="table-dark">
                <tr>
                    <th><i class="bi bi-hash me-1"></i>ID</th>
                    <th><i class="bi bi-card-heading me-1"></i>Nom</th>
                    <th><i class="bi bi-person me-1"></i>Instructeur</th>
                    <th><i class="bi bi-card-text me-1"></i>Description</th>
                    <th><i class="bi bi-gear me-1"></i>Actions</th>
                    <th><i class="bi bi-check-square me-1"></i>Inscription</th>
                </tr>
                </thead>
                <tbody>
                {% for atelier in ateliers %}
                    <tr>
                        <td>{{ atelier.id }}</td>
                        <td>{{ atelier.nom }}</td>
                        <td>{{ atelier.instructeur.nom }}</td>
                        <td>{{ atelier.description }}</td>
                        <td>
                            <!-- Boutons d'actions alignés et de même taille -->
                            <div class="d-flex gap-2">
                                <!-- Bouton Voir -->
                                <a href="{{ path('app_atelier_show', {'id': atelier.id}) }}" class="btn btn-info btn-sm d-flex align-items-center">
                                    <i class="bi bi-eye me-1"></i>Voir
                                </a>
                                <!-- Bouton Modifier (si l'utilisateur est instructeur de l'atelier) -->
                                {% if app.user and app.user == atelier.instructeur %}
                                    <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-warning btn-sm d-flex align-items-center">
                                        <i class="bi bi-pencil-square me-1"></i>Modifier
                                    </a>
                                {% endif %}
                            </div>
                        </td>
                        <td>
                            {% if app.user %}
                                {% if app.user in atelier.inscrits %}
                                    <!-- Bouton Se désinscrire -->
                                    <form action="{{ path('app_atelier_desinscription', {'id': atelier.id}) }}" method="post">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bi bi-x-circle me-1"></i>Se désinscrire
                                        </button>
                                    </form>
                                {% else %}
                                    <!-- Bouton S'inscrire -->
                                    <form action="{{ path('app_atelier_inscription', {'id': atelier.id}) }}" method="post">
                                        <button type="submit" class="btn btn-success btn-sm">
                                            <i class="bi bi-check-circle me-1"></i>S'inscrire
                                        </button>
                                    </form>
                                {% endif %}
                            {% else %}
                                <p class="text-muted">Connectez-vous pour vous inscrire</p>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center">
                            <i class="bi bi-exclamation-triangle me-2"></i>Aucun atelier trouvé
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}