{% extends 'base.html.twig' %}

{% block title %}Créer un Atelier{% endblock %}

{% block body %}
    <div class="container mt-4">
        <!-- Titre de la page avec icône -->
        <h1 class="mb-4 text-center">
            <i class="bi bi-plus-circle me-2"></i>Créer un nouvel Atelier
        </h1>

        <!-- Carte pour le formulaire de création -->
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Icône pour le formulaire -->
                <h2 class="card-title mb-4">
                    <i class="bi bi-tools me-2"></i>Formulaire de création
                </h2>

                <!-- Formulaire -->
                {{ include('atelier/_form.html.twig', {'button_label': 'Créer'}) }}
            </div>
        </div>

        <!-- Bouton Retour avec icône -->
        <div class="mt-4 text-center">
            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Retour à la liste
            </a>
        </div>
    </div>
{% endblock %}