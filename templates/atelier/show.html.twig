{% extends 'base.html.twig' %}

{% block title %}Atelier - {{ atelier.nom }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-center">{{ atelier.nom }}</h1>

        <!-- Messages flash -->
        {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle me-2"></i>{{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}

        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">DÃ©tails de l'atelier</h5>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong><i class="bi bi-hash me-2"></i>ID:</strong> {{ atelier.id }}
                    </li>
                    <li class="list-group-item">
                        <strong><i class="bi bi-card-text me-2"></i>Description:</strong> {{ atelier.description | raw }}
                    </li>
                    <li class="list-group-item">
                        <strong><i class="bi bi-person me-2"></i>Instructeur:</strong>
                        {{ atelier.instructeur.nom }} ({{ atelier.instructeur.email }})
                    </li>
                </ul>
            </div>
        </div>

        <!-- Affichage de la moyenne des notes -->
        <div class="mt-4">
            {% if moyenne_notes > 0 %}
                <div class="alert alert-info">
                    <i class="bi bi-star-fill"></i> Note moyenne : <strong>{{ moyenne_notes }}</strong>/5
                </div>
            {% else %}
                <p class="text-muted">Cet atelier n'a pas encore reÃ§u de notes.</p>
            {% endif %}
        </div>

        <!-- Affichage du graphique des notes -->
        {% if notes_data is not empty %}
            <div class="card mt-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">RÃ©partition des notes</h5>
                    <canvas id="chartNotes" ></canvas>
                </div>
            </div>
        {% endif %}

        <!-- Liste des apprentis inscrits (visible uniquement pour les instructeurs) -->
        {% if app.user and 'ROLE_INSTRUCTEUR' in app.user.roles %}
            <div class="card mt-3 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Apprentis inscrits</h5>
                    {% if atelier.inscrits is not empty %}
                        <ul class="list-group list-group-flush">
                            {% for apprenti in atelier.inscrits %}
                                <li class="list-group-item">
                                    <i class="bi bi-person-circle me-2"></i> {{ apprenti.nom }} ({{ apprenti.email }})
                                </li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <p class="text-muted">Aucun apprenti inscrit pour le moment.</p>
                    {% endif %}
                </div>
            </div>
        {% endif %}

        <div class="mt-3">
            <!-- VÃ©rifier si l'utilisateur est connectÃ© et est un apprenti -->
            {% if app.user and 'ROLE_APPRENTI' in app.user.roles %}
                {% if app.user in atelier.inscrits %}
                    <form action="{{ path('app_atelier_desinscription', {'id': atelier.id}) }}" method="post">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-circle me-2"></i> Se dÃ©sinscrire
                        </button>
                    </form>
                {% else %}
                    <form action="{{ path('app_atelier_inscription', {'id': atelier.id}) }}" method="post">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-2"></i> S'inscrire
                        </button>
                    </form>
                {% endif %}

                <!-- Bouton pour noter l'atelier -->
                <a href="{{ path('app_atelier_noter', {'id': atelier.id}) }}" class="btn btn-primary mt-3">
                    <i class="bi bi-pencil-square"></i> Noter cet atelier
                </a>
            {% endif %}
        </div>

        <br>

        <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour Ã  la liste
        </a>
        <br>

        {% if app.user and app.user == atelier.instructeur %}
            <a href="{{ path('app_atelier_edit', {'id': atelier.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil-square me-2"></i>Modifier
            </a>
            <br>
            {{ include('atelier/_delete_form.html.twig') }}
        {% endif %}
    </div>

    <!-- Script Chart.js pour afficher les notes -->
    {% if notes_data is not empty %}
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            var ctx = document.getElementById('chartNotes').getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['0', '1', '2', '3', '4', '5'],
                    datasets: [{
                        label: 'Nombre de votes',
                        data: {{ notes_data|json_encode|raw }},
                        backgroundColor: 'rgba(75, 192, 192, 0.2)',
                        borderColor: 'rgba(75, 192, 192, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: false, // ðŸ”¥ DÃ©sactiver la mise Ã  l'Ã©chelle automatique
                    maintainAspectRatio: true, // ðŸ”¥ Permet d'ajuster la taille librement
                    width: 900,  // ðŸ”¥ Largeur personnalisÃ©e
                    height: 700,  // ðŸ”¥ Hauteur personnalisÃ©e
                }
            });
        </script>
    {% endif %}
{% endblock %}
