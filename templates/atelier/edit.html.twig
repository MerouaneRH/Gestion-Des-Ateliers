{% extends 'base.html.twig' %}

{% block title %}Modifier Atelier{% endblock %}

{% block body %}
    <div class="container mt-4">
        <!-- Titre de la page avec icône -->
        <h1 class="mb-4 text-center">
            <i class="bi bi-pencil-square me-2"></i>Modifier {{ atelier.nom }}
        </h1>

        <!-- Carte pour le formulaire de modification -->
        <div class="card shadow-sm">
            <div class="card-body">
                <!-- Icône pour le formulaire -->
                <h2 class="card-title mb-4">
                    <i class="bi bi-tools me-2"></i>Formulaire de modification
                </h2>

                <!-- Formulaire -->
                {{ include('atelier/_form.html.twig', {'button_label': 'Modifier'}) }}
            </div>
        </div>

        <!-- Boutons d'actions -->
        <div class="mt-4">
            <!-- Bouton Retour avec icône -->
            <a href="{{ path('app_atelier_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Retour à la liste
            </a>

            <!-- Bouton Supprimer avec icône (intégré dans le formulaire de suppression) -->
            {{ include('atelier/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}